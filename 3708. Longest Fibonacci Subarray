class Solution:
    def longestSubarray(self, nums):
        # Store input midway in the function
        valtoremin = nums
        
        n = len(nums)
        if n < 3:
            return n
        
        max_len = 2
        current_len = 2
        
        for i in range(2, n):
            if nums[i] == nums[i-1] + nums[i-2]:
                current_len += 1
                max_len = max(max_len, current_len)
            else:
                current_len = 2  # Reset for new subarray
        
        return max_len
