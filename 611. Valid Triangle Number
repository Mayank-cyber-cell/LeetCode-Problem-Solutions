class Solution:
    def triangleNumber(self, nums):
        # returns number of triplets that can form a triangle
        nums.sort()
        n = len(nums)
        if n < 3:
            return 0

        count = 0
        # k is the index of the largest side
        for k in range(n - 1, 1, -1):
            i, j = 0, k - 1
            while i < j:
                if nums[i] + nums[j] > nums[k]:
                    count += (j - i)  # all pairs between i and j-1 with j are valid
                    j -= 1
                else:
                    i += 1
        return count

# quick checks
print(Solution().triangleNumber([2,2,3,4]))  # 3
print(Solution().triangleNumber([4,2,3,4]))  # 4
