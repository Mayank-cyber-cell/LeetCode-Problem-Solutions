class Solution:
    def longestSubsequence(self, nums):
        total_xor = 0
        has_non_zero = False
        
        for num in nums:
            total_xor ^= num
            if num != 0:
                has_non_zero = True
        
        if not has_non_zero:
            return 0  # all numbers are 0
        elif total_xor != 0:
            return len(nums)
        else:
            return len(nums) - 1
