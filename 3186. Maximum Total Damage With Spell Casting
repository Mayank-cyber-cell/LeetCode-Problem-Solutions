from collections import Counter

class Solution:
    def maximumTotalDamage(self, power):
        count = Counter(power)
        unique = sorted(count.keys())
        n = len(unique)
        
        dp = [0] * (n + 1)
        
        for i in range(1, n + 1):
            curr = unique[i - 1]
            total = curr * count[curr]
            
            j = i - 1
            while j > 0 and unique[j - 1] >= curr - 2:
                j -= 1
            
            dp[i] = max(dp[i - 1], dp[j] + total)
        
        return dp[n]
